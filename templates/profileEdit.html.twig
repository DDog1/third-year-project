{% extends '_base.html.twig' %}

{% block main %}
    <div>
        <h1>Edit Profile</h1>

        <form
                action="/processUserEdit"
                method="post"
        >

            <label for="description">Description</label>
            <input type="text" title="description" name="description" autofocus>
            <!--<textarea title="text"  name="title" autofocus></textarea>-->
            <br>

            <label for="image" class="space">Image</label>
            <input type="file" title="image" name="image">
            <br>

            <input type="submit" value="Submit">
            <input type="reset" value="Reset">

        </form>
   </div>
{% endblock %}